{
  "name": "Scholar Sphere",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>",
    "scripting"
  ],
  "action": {
    "default_popup": "html/index.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "js/index.js",
        "img/addIcon.png",
        "img/removeIcon.png"
      ]
    }
  ]
}